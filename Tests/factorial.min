program factorial
    /*A simple minimal++ program to
    calculate the factorial of a number (n).*/
    declare  n, f, i;
    {
        n := 10;
        f := 1;
        i := 1;
        
        while (i <= n)
        {
            f := f * i;
            i := i + 1;
        }
        print(f);
    }

